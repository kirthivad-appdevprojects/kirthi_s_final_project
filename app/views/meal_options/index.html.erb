<div class="page-header">
  <h1>
    Meal options
    <a href="/meal_options/new" class="btn btn-lg btn-success">New Meal option</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ingredient</th>
        <th>Recipe</th>
        <th>Actions</th>
      </tr>

      <% @meal_options.each do |meal_option| %>
      <tr>
        <td><%= meal_option.ingredient.user_id %></td>
        <td><%= meal_option.recipe.food_group %></td>
        <td>
          <a href="/meal_options/<%= meal_option.id %>" class="btn btn-primary">Show</a>
          <a href="/meal_options/<%= meal_option.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal_option/<%= meal_option.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @meal_options, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
